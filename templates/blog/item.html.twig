{% extends 'base.html.twig' %}

{% block title %}{{ page.metaTitle }}{% endblock %}

{% block header %}
    {{ include('elements/menu/header_nav.html.twig') }}
    {{ include('elements/header/header_top.html.twig') }}
    {{ include('elements/header/header_video.html.twig') }}
{% endblock %}

{% block body %}
    <div> Breadcrumbs here </div>

    {# Title of page #}
    <div class="container">
        <div class="row">
            <div class="col-md-12 model-page__description">
                <h1 class="text-center">{{ page.name }}</h1>
            </div>
        </div>
    </div>



    <div class="container mt-5">
        <div class="row">
            <!-- Левая часть с изображением -->
            <div class="col-md-6">
                <div class="card">
                    <img src="/images/blog-item/{{ page.image }}" class="card-img-top img-fluid" alt="{{ page.name }}">
                </div>
            </div>

            <!-- Правая часть с текстом -->
            <div class="col-md-6">
                <h1>{{ page.name }}</h1>
                <ul class="list-unstyled">
                    <li><strong>Модель:</strong> {{ page.model }}</li>
                    <li><strong>Двигатель:</strong> {{ page.engine ?? ''}} </li>
                    <li><strong>Кузов:</strong> {{ page.carBody ?? '' }}</li>
                    <li><strong>Пробег:</strong> {{ page.mileage ?? '' }}</li>
                    <li>{{ (page.shortDescr ?? '')|raw }}</li>
                </ul>

                <!-- Рейтинг -->
                <div class="my-3">
                    <span class="text-warning">
                        &#9733; &#9733; &#9733; &#9733; &#9733;
                    </span>
                    <span>{#(Эту статью оценили 526 раз)#}</span>
                </div>

                <!-- Оглавление -->
                <h5>Оглавление:</h5>
                {{ (page.tableContent ?? '')|raw }}

                <!-- Звонок -->
                <div class="container text-center my-4">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <!-- Верхняя декоративная линия со звёздами -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <hr class="flex-grow-1">
                                <span class="mx-2 text-muted">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </span>
                                <hr class="flex-grow-1">
                            </div>

                            <!-- Текст -->
                            <p class="h5 mb-2">Бесплатная консультация мастера БМВ:</p>
                            <p class="h2 text-danger font-weight-bold">+7 (812) 936-33-79</p>

                            <!-- Нижняя декоративная линия со звёздами -->
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <hr class="flex-grow-1">
                                <span class="mx-2 text-muted">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </span>
                                <hr class="flex-grow-1">
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                {{ (page.content ?? '')|raw }}
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row">
            {% if gallery is defined %}
                {% for image in gallery %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="/images/blog-list/gallery/{{ image }}" class="card-img-top img-fluid" alt="Gallery Image">
                    </div>
                </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>


    {{ include('elements/forms/question-form.html.twig') }}

    {# Contacts #}
    {{ include('elements/footer/contacts.html.twig') }}

    {# Footer #}
    {{ include('elements/footer/footer.html.twig') }}

{% endblock %}
